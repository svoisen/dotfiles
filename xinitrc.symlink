#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# Load .Xresources 
xrdb -merge -I$HOME ~/.Xresources

# Load terminal daemon
urxvtd -q -o -f &

# Rotate screen
xrandr --output None-1 --rotate right
xrandr --output None-1 --transform 1,0,0,0,1,-1,0,0,1

# Start the i3 window manager
exec i3
